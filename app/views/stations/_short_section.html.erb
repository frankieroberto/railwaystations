<% if content %>
  <%= content_tag "section", :class => "short" do %>
    <%= content_tag "header" do %>
      <%= content_tag "h2" do %>
        <%= image_tag("#{icon}.svg", :alt => title, :class => 'title') %>
      <% end %>
    <% end %>

    <%= content_tag 'p', content.html_safe, :class => 'content' %>
  <% end %>
<% end %>