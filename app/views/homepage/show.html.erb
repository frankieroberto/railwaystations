<% content_for :page_title, t(:railway_stations) %>

<%= content_tag "article" do %>
	<%= content_tag "header" do %>
		<%= content_tag "hgroup" do %>
			<%= content_tag "h1", t(:railway_stations) %>
			<%= content_tag "h2", t(:a_handy_guide) %>
		<% end %>
	<% end %>

	<%= content_tag "ul" do %>
		<% @stations.each do |station| %>
			<%= content_tag "li" do %>
				<%= link_to station.name, station %>		
			<% end %>
		<% end %>
	<% end %>
	
<% end %>